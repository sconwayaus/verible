{
  "name": "verible",
  "displayName": "Verible",
  "description": "Verible SystemVerilog Language Server",
  "version": "0.0.3220",
  "publisher": "chipsalliance",
  "repository": {
    "type": "git",
    "url": "https://github.com/chipsalliance/verible",
    "tag": "v0.0-3220-g9c63b8ad"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "systemverilog",
        "extensions": [
          ".sv",
          ".v"
        ],
        "aliases": [
          "System Verilog",
          "system-verilog",
          "verilog"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Verible",
      "properties": {
        "verible.languageServer.path": {
          "type": "string",
          "default": "verible-verilog-ls",
          "scope": "machine-overridable",
          "description": "The path to verible-verilog-ls executable, e.g.: /usr/bin/verible-verilog-ls.",
          "order": 0
        },
        "verible.languageServer.arguments": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Arguments for verible-verilog-ls server.",
          "order": 1
        },
        "verible.projectFileList.includeGlobPattern": {
          "type": "string",
          "default": "{**/*.sv,**/*.svh,**/*.v}",
          "scope": "machine-overridable",
          "description": "Include file glob pattern for creating a project file list (verible.filelist).",
          "order": 2
        },
        "verible.projectFileList.excludeGlobPattern": {
          "type": "string",
          "default": "",
          "scope": "machine-overridable",
          "description": "Exclude file glob pattern for creating a project file list (verible.filelist).",
          "order": 3
        }
      }
    },
    "commands": [
      {
        "command": "verible.create_project_file_list",
        "title": "Verible: Create Project File List (verible.filelist)"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:systemverilog",
    "onLanguage:verilog"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsix": "vsce package -o verible.vsix"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@types/decompress": "^4.2.4",
    "@types/follow-redirects": "^1.14.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "vsce": "^1.100.1",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "follow-redirects": "^1.15.2",
    "vscode-languageclient": "^7.0.0"
  }
}
